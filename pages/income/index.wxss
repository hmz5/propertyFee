/**index.wxss**/

.income-type-item {
  margin-top: 20rpx;
  background: white;
  padding-bottom: 10rpx;
}

.income-item {
  height: 80rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  border-radius: 4rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}

.income-type-item .total {
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #eb4f38;
}

.income-item .income-label {
  width: 30%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  display: block;
  flex-shrink: 0;
}

.income-item .income-input {
  color: #333;
  border: 1rpx solid #666;
  margin-right: 75rpx;
  padding: 0 20rpx;
}

.income-item .income-input:nth-last-of-type(1) {
  margin: 0;
}

.income-item .income-input:focus {
  border-color: #eb4f38;
}

.income-item .income-unfold {
  width: 120rpx;
  height: 60rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.income-item .income-unfold .unfold {
  width: 25rpx;
  height: 25rpx;
  display: inline-block;
  border: 4rpx solid #ccc;
  border-top: none;
  border-left: none;
  transform: rotateZ(225deg);
  position: relative;
  top: 8rpx;
}

.income-item .income-unfold .active {
  transform: rotate(45deg);
  top: -8rpx;
}

.income-item .income-unfold .add {
  width: 30rpx;
  height: 30rpx;
  /* font-size: 40rpx; */
  line-height: 30rpx;
  text-align: center;
  display: inline-block;
  color: #ccc;
  border: 1px solid #ccc;
  border-radius: 100%;
}

.addOne {
  margin: 0 35%;
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 40rpx;
}

.submit {
  margin: 40rpx;
}