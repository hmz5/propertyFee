/**index.wxss**/

.expend-type-item {
  margin-top: 20rpx;
  background: white;
  padding-bottom: 10rpx; 
}

.expend-typeDetail-list {
  /* margin-bottom: 20rpx; */
  /* border-bottom: 1rpx solid rgba(0, 0, 0, 0.1); */
  border-top: 4rpx solid rgba(0, 0, 0, 0.1);
}

.expend-item {
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  border-radius: 4rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}

.expend-type-item .total {
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #eb4f38;
}

.expend-item .expend-label {
  width: 30%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  display: block;
  flex-shrink: 0;
}

.expend-item-top .expend-label {
  width: auto;
  padding-left: 20rpx;
}

.expend-item .expend-input {
  color: #333;
  border: 1rpx solid #666;
  margin-right: 75rpx;
  padding: 0 20rpx;
}

.expend-item .expend-input:nth-last-of-type(1) {
  margin: 0;
}

.expend-item .expend-input:focus {
  border-color: #eb4f38;
}

.expend-item .expend-unfold {
  width: 120rpx;
  height: 60rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.expend-item-top .expend-unfold {
  width: 140rpx;
}

.expend-item .expend-unfold .unfold {
  width: 25rpx;
  height: 25rpx;
  display: inline-block;
  border: 4rpx solid #ccc;
  border-top: none;
  border-left: none;
  transform: rotateZ(225deg);
  position: relative;
  top: 8rpx;
}

.expend-item .expend-unfold .active {
  transform: rotate(45deg);
  top: -8rpx;
}

.expend-item .expend-unfold .add {
  width: 30rpx;
  height: 30rpx;
  /* font-size: 40rpx; */
  line-height: 30rpx;
  text-align: center;
  display: inline-block;
  color: #ccc;
  border: 1px solid #ccc;
  border-radius: 100%;
}

.addOne {
  margin: 0 35%;
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 40rpx;
}

.submit {
  margin: 40rpx;
}

.additionList {
  margin-top: 20rpx;
}

.addition {
  display: flex;
  height: 100rpx;
  background: #fff;
  align-items: center;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}

.addition-label {
  width: 30%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  display: block;
  flex-shrink: 0;
  font-size: 28rpx;
  color: #333;
}

.addition .select {
  width: 50%;
  height: 60rpx;
  line-height: 60rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  position: relative;
}

.addition .select .choose {
  display: block;
  padding: 0 20rpx;
}

.addition .select .options {
  position: absolute;
  left: -1rpx;
  right: -1rpx;
  top: 64rpx;
  z-index: 10;
  background: #fff;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 4rpx 4rpx 4rpx rgba(0, 0, 0, 0.1);
}

.addition .select .options text {
  padding: 0 20rpx;
  display: block;
  background: #fff;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.addition .select .options text:nth-last-of-type(1) {
  border: none;
}